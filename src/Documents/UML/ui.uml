@startuml

hide empty description

[*] --> Initialize : Power ON
Initialize : All LOOP off
Initialize : MUTE off
Initialize : PGM 1-1


Initialize --> MODE_MAN

state MODE_MAN : Manual MODE\n\n Press [LOOP#] to toggle LOOP# ON/OFF.

MODE_MAN --> MODE_SEL_NUM	: Press [MAN/PGM]
MODE_MAN --> MODE_SEL_BANK	: Press [BANK]
MODE_MAN --> MODE_WRITE_NUM	: Press and Hold\n[MAN/PGM]
MODE_MAN --> MODE_WRITE_BANK	: Press and Hold\n[BANK]


state MODE_PGM : Program MODE\n\n Press [LOOP#] to switch the Program Number.

MODE_PGM -left-> MODE_MAN	: Press [MAN/PGM]
MODE_PGM --> MODE_SEL_BANK	: Press [BANK]
MODE_PGM --> MODE_WRITE_NUM	: Press and Hold\n[MAN/PGM]
MODE_PGM --> MODE_WRITE_BANK	: Press and Hold\n[BANK]
' MODE_PGM -up-> MODE_PGM		: Press [LOOP#]

state sel_write {
	state SEL_BANK_NUM {
		state MODE_SEL_NUM 
		state MODE_SEL_BANK 

		MODE_SEL_NUM --> MODE_SEL_BANK		: Press [BANK]
		MODE_SEL_NUM -up-> MODE_PGM			: Press [LOOP#]
		MODE_SEL_NUM -up[dashed]-> MODE_MAN			: Press [MAN/PGM]
		MODE_SEL_NUM --> MODE_WRITE_NUM		: Press and Hold\n[MAN/PGM]
		MODE_SEL_NUM --> MODE_WRITE_BANK		: Press and Hold\n[BANK]

		MODE_SEL_BANK -up-> MODE_SEL_NUM		: Press [BANK]
		MODE_SEL_BANK -up-> MODE_SEL_NUM		: Press [LOOP#]
		MODE_SEL_BANK -up[dashed]-> MODE_MAN		: Press [MAN/PGM]
		MODE_SEL_BANK --> MODE_WRITE_NUM		: Press and Hold\n[MAN/PGM]
		' MODE_SEL_BANK --> MODE_WRITE_BANK		: Press and Hold\n[BANK]
		MODE_SEL_BANK --> MODE_WRITE_BANK		: Press and Hold\n[BANK]

	}


	state WRITE_BANK_NUM {
		state MODE_WRITE_NUM 
		state MODE_WRITE_BANK 

		MODE_WRITE_NUM -[bold]> Write_Memory		: Press [LOOP#]
		Write_Memory -up[bold]-> MODE_PGM

		MODE_WRITE_NUM --> MODE_WRITE_BANK	: Press [BANK]
		MODE_WRITE_NUM -up[dashed]-> MODE_MAN		: Press [MAN/PGM]

		MODE_WRITE_BANK --> MODE_WRITE_NUM	: Press [LOOP#]
		MODE_WRITE_BANK -up[dashed]-> MODE_MAN		: Press [MAN/PGM]
		MODE_WRITE_BANK --> MODE_WRITE_NUM	: Press [BANK]
		

	}
}



@enduml
